@model Nutriplate.Web.ViewModels.ProfileViewModel

@{
    ViewData["Title"] = "Profilim";
}

<h2>Profilim</h2>

@if (ViewBag.Success != null)
{
    <div class="alert alert-success">
        @ViewBag.Success
    </div>
}

<form asp-action="Edit" method="post" class="mt-3">

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <!-- AD SOYAD -->
    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <!-- E-POSTA (readonly) -->
    <div class="mb-3">
        <label asp-for="Email" class="form-label"></label>
        <input asp-for="Email" class="form-control" readonly />
        <span class="form-text">E-posta değiştirilemez.</span>
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <!-- DOĞUM TARİHİ -->
    <div class="mb-3">
        <label asp-for="BirthDate" class="form-label"></label>
        <input asp-for="BirthDate" type="date" class="form-control" />
        <span asp-validation-for="BirthDate" class="text-danger"></span>
    </div>

    <!-- CİNSİYET -->
    <div class="mb-3">
        <label asp-for="Gender" class="form-label"></label>
        <select asp-for="Gender" class="form-select">
            <option value="">Seçiniz</option>
            <option>Kadın</option>
            <option>Erkek</option>
            <option>Belirtmek istemiyorum</option>
        </select>
        <span asp-validation-for="Gender" class="text-danger"></span>
    </div>

    <!-- BOY -->
    <div class="mb-3">
        <label asp-for="HeightCm" class="form-label"></label>
        <input asp-for="HeightCm" class="form-control" />
        <span asp-validation-for="HeightCm" class="text-danger"></span>
    </div>

    <!-- KİLO -->
    <div class="mb-3">
        <label asp-for="WeightKg" class="form-label"></label>
        <input asp-for="WeightKg" class="form-control" />
        <span asp-validation-for="WeightKg" class="text-danger"></span>
    </div>

    <!-- AKTİVİTE SEVİYESİ -->
    <div class="mb-3">
        <label asp-for="ActivityLevel" class="form-label"></label>
        <select asp-for="ActivityLevel" class="form-select">
            <option value="">Seçiniz</option>
            <option>Düşük</option>
            <option>Orta</option>
            <option>Yüksek</option>
        </select>
        <span asp-validation-for="ActivityLevel" class="text-danger"></span>
    </div>

    <!-- HEDEF GÜNLÜK KALORİ -->
    <div class="mb-3">
        <label asp-for="DailyCalorieTarget" class="form-label"></label>
        <input asp-for="DailyCalorieTarget" class="form-control" />
        <span asp-validation-for="DailyCalorieTarget" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
