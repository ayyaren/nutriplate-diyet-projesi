@{
    ViewData["Title"] = "Giriş Menüsü";
    Layout = "_Layout";
}

<div class="landing-wrapper d-flex justify-content-center align-items-center">

    <div class="landing-card text-center">

        <!-- Diyet temalı görsel -->
        <img src="~/images/diyet.png.jpg"
             alt="Healthy Food"
             class="landing-image mb-4" />

        <h1 class="landing-title mb-3">NutriPlate</h1>

        <p class="landing-subtitle mb-4">
            Günlük öğünlerini, kalorini ve makrolarını takip et.
        </p>

        <!-- Butonlar -->
        <div class="landing-buttons mx-auto">
            <a asp-controller="Account"
               asp-action="Register"
               class="btn btn-light btn-lg w-100 mb-3 shadow-sm landing-btn">
                Yeni bir kullanıcıyım
            </a>

            <a asp-controller="Account"
               asp-action="Login"
               class="btn btn-outline-light btn-lg w-100 shadow-sm landing-btn-outline">
                Zaten bir hesabım var
            </a>
        </div>

        <div class="text-center mt-3">
            <span class="text-light">
                🧑‍⚕️ Diyetisyen misiniz?
            </span>
            <a asp-controller="Account"
               asp-action="DietitianRegister"
               class="fw-semibold text-white text-decoration-underline ms-1">
                Diyetisyen kaydı için tıklayın
            </a>
        </div>


        <!-- Alt bilgi -->
        <p class="landing-footer text-white-50 mt-4 small">
            Devam etmekle <strong>Şartlar ve Koşullar</strong> ve
            <strong>Gizlilik Politikası</strong>'nı kabul etmiş olursun.
        </p>
    </div>

</div>

<style>
    /* SADECE BU SAYFADA: Arka planı tamamen yeşil yap */
    body {
        background: linear-gradient(135deg, #27ae60, #1f8c4e);
    }

    /* _Layout içindeki RenderBody'yi saran container'ı tam genişlik yap */
    main > .container {
        max-width: 100%;
        padding-left: 0;
        padding-right: 0;
    }

    /* LANDING WRAPPER (ortaya hizalanmış alan) */
    .landing-wrapper {
        min-height: calc(100vh - 70px); /* navbar yüksekliği kadar düş; gerekirse 80 yap */
        display: flex;
        justify-content: center;
        align-items: center;
    }

    /* ORTADAKİ KART */
    .landing-card {
        max-width: 450px;
        width: 100%;
        background-color: rgba(255, 255, 255, 0.06);
        border-radius: 20px;
        backdrop-filter: blur(8px);
        box-shadow: 0 16px 40px rgba(0, 0, 0, 0.25);
        padding: 40px 32px;
        animation: fadeUp 0.6s ease-out;
    }

    /* GÖRSEL (BÜYÜTÜLMÜŞ) */
    .landing-image {
        width: 220px;
        height: auto;
        object-fit: contain;
        filter: drop-shadow(0 5px 15px rgba(0,0,0,0.3));
        margin-bottom: 18px;
    }

    /* BAŞLIK & METİNLER */
    .landing-title {
        color: #ffffff;
        font-size: 2.4rem;
        font-weight: 700;
        letter-spacing: 0.04em;
    }

    .landing-subtitle {
        color: rgba(255,255,255,0.88);
        font-size: 0.97rem;
    }

    .landing-footer {
        color: rgba(255,255,255,0.75);
    }

    /* BUTONLAR */
    .landing-buttons {
        width: 100%;
        max-width: 360px;
    }

    .landing-btn,
    .landing-btn-outline {
        font-weight: 600;
        border-radius: 12px;
        transition: transform 0.15s ease, box-shadow 0.15s ease, background-color 0.15s ease, color 0.15s ease;
    }

        .landing-btn:hover,
        .landing-btn-outline:hover {
            transform: translateY(-2px) scale(1.01);
            box-shadow: 0 12px 25px rgba(0,0,0,0.28);
        }

    .landing-btn-outline {
        background-color: rgba(255,255,255,0.1);
        color: #ffffff !important;
        border-color: rgba(255,255,255,0.6);
    }

        .landing-btn-outline:hover {
            background-color: rgba(255,255,255,0.25);
            color: #ffffff !important;
        }

    /* KÜÇÜK EKRANLAR İÇİN */
    @@media (max-width: 576px) {
        .landing-title {
            font-size: 2rem;
        }

        .landing-card {
            padding: 32px 20px;
        }

        .landing-image {
            width: 190px;
        }
    }

    /* GİRİŞ ANİMASYONU */
    @@keyframes fadeUp {
        from

    {
        opacity: 0;
        transform: translateY(20px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }
</style>
