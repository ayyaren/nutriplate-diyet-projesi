<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - NutriPlate</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap -->
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />

    <!-- Proje CSS'in (landing-bg vb. buradan gelir) -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<body class="@(ViewData["BodyClass"] ?? "")">
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">NutriPlate</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNavbar">

                    <!-- SOL MENÜ -->
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Anasayfa</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Meal" asp-action="Index">Öğünlerim</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Dashboard" asp-action="Index">Günlük Özet</a>
                        </li>

                        @* SADECE ADMIN İÇİN *@
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Admin" asp-action="Index">Admin Paneli</a>
                            </li>
                        }

                        @* SADECE DİYETİSYEN İÇİN *@
                        @if (User.IsInRole("Dietitian"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Dietitian" asp-action="Index">Diyetisyen Paneli</a>
                            </li>
                        }
                    </ul>

                    <!-- SAĞ MENÜ -->
                    <ul class="navbar-nav ms-auto">
                        @if (User.Identity?.IsAuthenticated ?? false)
                        {
                            <!-- PROFİLİM LİNKİ -->
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Profile" asp-action="Edit">Profilim</a>
                            </li>

                            <li class="nav-item">
                                <span class="navbar-text me-2">
                                    Merhaba, @User.Identity.Name
                                </span>
                            </li>

                            <li class="nav-item">
                                <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-outline-light btn-sm">Çıkış</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Login">Giriş</a>
                            </li>

                            <li class="nav-item">
                                <a class="btn btn-success btn-sm ms-2" asp-controller="Account" asp-action="Register">Kayıt Ol</a>
                            </li>
                        }
                    </ul>

                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-4 mb-5 flex-grow-1">
        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
