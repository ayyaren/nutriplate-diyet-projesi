@model Nutriplate.Web.ViewModels.MealListItemViewModel

<div class="card meal-card shadow-sm">
    <div class="card-body d-flex flex-column h-100">

        <!-- Öğün adı + tarih -->
        <div class="mb-3">
            <h5 class="card-title mb-1">@Model.MealType</h5>
            <small class="text-muted">
                @Model.MealDateTime.ToString("dd.MM.yyyy HH:mm")
            </small>
        </div>

        <!-- Kalori badge -->
        <div class="mb-3">
            <span class="badge meal-kcal-badge">
                @Model.TotalKcal kcal
            </span>
        </div>

        <!-- Detay butonu (her zaman en altta) -->
        <div class="mt-auto">
            <a asp-controller="Meal"
               asp-action="Details"
               asp-route-id="@Model.Id"
               class="btn meal-detail-btn w-100">
                Detay
            </a>
        </div>

    </div>
</div>

<style>
    /* Kart genel görünümü */
    .meal-card {
        border-radius: 16px;
        border: 1px solid #e1efe6 !important;
        transition: transform 0.12s ease, box-shadow 0.12s ease, border-color 0.12s ease;
    }

        .meal-card:hover {
            transform: translateY(-2px);
            border-color: #c6ebd6 !important;
            box-shadow: 0 10px 24px rgba(0, 0, 0, 0.06);
        }

    /* Kalori badge */
    .meal-kcal-badge {
        background: linear-gradient(135deg, #2ecc71, #27ae60);
        padding: 6px 14px;
        border-radius: 999px;
        font-size: 0.85rem;
        font-weight: 600;
        color: #fff;
        box-shadow: 0 4px 10px rgba(46, 204, 113, 0.35);
    }

    /* Detay butonu */
    .meal-detail-btn {
        border-radius: 999px;
        border: 1px solid #27ae60;
        color: #27ae60;
        font-weight: 600;
        padding: 6px 0;
        transition: all 0.15s ease;
        background-color: #ffffff;
    }

        .meal-detail-btn:hover {
            background-color: #27ae60;
            color: #ffffff !important;
            box-shadow: 0 8px 18px rgba(39, 174, 96, 0.35);
            transform: translateY(-1px);
        }
</style>
