@model List<Nutriplate.Web.ViewModels.AdminUserViewModel>

@{
    ViewData["Title"] = "Admin Paneli";
}

<h2>Admin Paneli</h2>

<p>Bu sayfaya sadece <strong>Admin</strong> rolündeki kullanıcılar erişebilir.</p>

<table class="table table-striped mt-3">
    <thead>
        <tr>
            <th>#</th>
            <th>Ad Soyad</th>
            <th>E-posta</th>
            <th>Rol</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.Name</td>
                <td>@user.Email</td>
                <td>@user.Role</td>
            </tr>
        }
    </tbody>
</table>

<hr />

<p class="text-muted">
    İleride buraya:
</p>
<ul class="text-muted">
    <li>Kullanıcı listesini Ceren'in Auth API'sinden çekme</li>
    <li>Diyetisyen rollerini yönetme</li>
    <li>Sistem istatistikleri için özet kutuları</li>
</ul>
