@model Nutriplate.Web.ViewModels.MealDetailViewModel

@{
    ViewData["Title"] = "Öğün Detayı";
}

<h2>Öğün Detayı</h2>

<div class="mb-3">
    <strong>Öğün Türü:</strong> @Model.MealType <br />
    <strong>Tarih / Saat:</strong> @Model.MealDateTime.ToString("dd.MM.yyyy HH:mm") <br />
    <strong>Toplam Kalori:</strong> @Model.TotalKcal kcal
</div>

@if (!string.IsNullOrEmpty(Model.Notes))
{
    <div class="alert alert-info">
        @Model.Notes
    </div>
}

<h3>Yemekler</h3>

<table class="table table-striped">
    <thead>
        <tr>
            <th>#</th>
            <th>Besin</th>
            <th>Gram</th>
            <th>Kalori (kcal)</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Items.Count; i++)
        {
            var item = Model.Items[i];
            <tr>
                <td>@(i + 1)</td>
                <td>@item.FoodName</td>
                <td>@item.Gram g</td>
                <td>@item.Kcal</td>
            </tr>
        }
    </tbody>
</table>

<hr />

@{
    var suggestions = ViewBag.Suggestions as IEnumerable<dynamic>;
}

@if (suggestions != null)
{
    <h3>Alternatif Yiyecek Önerileri</h3>
    <p class="text-muted">
        Bu öneriler, mevcut öğündeki bazı besinler için daha sağlıklı / daha dengeli alternatif örnekleridir.
        Şimdilik örnek veri gösteriliyor; ileride ML & diyetisyen kurallarına göre gerçek öneriler üretilecek.
    </p>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Mevcut Besin</th>
                <th>Önerilen Alternatif</th>
                <th>Neden?</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var s in suggestions)
            {
                <tr>
                    <td>@s.Original</td>
                    <td>@s.Alternative</td>
                    <td>@s.Reason</td>
                </tr>
            }
        </tbody>
    </table>
}

<a asp-action="Index" class="btn btn-secondary mt-3">Öğün listesine dön</a>
