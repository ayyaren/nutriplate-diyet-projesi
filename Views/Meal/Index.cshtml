@model IEnumerable<Nutriplate.Web.ViewModels.MealListItemViewModel>

@{
    ViewData["Title"] = "Öğünlerim";
}

<div class="meal-page-container">
    <div class="d-flex justify-content-between align-items-center mb-3 flex-wrap gap-2">
        <div>
            <h2 class="fw-bold mb-1">Öğünlerim</h2>
            <p class="text-muted mb-0">
                Gün içindeki öğünlerini, saatlerini ve kalori dengesini buradan takip et.
            </p>
        </div>

        <div class="d-flex flex-wrap gap-2">
            <!-- ⭐ Geri dön butonu -->
            <a asp-controller="Dashboard"
               asp-action="Index"
               class="btn btn-outline-secondary btn-sm">
                ⬅ Dashboard'a Dön
            </a>

            <a asp-action="Create"
               class="btn btn-success btn-sm">
                Yeni Öğün (Manuel)
            </a>

            <a asp-action="UploadPhoto"
               class="btn btn-outline-success btn-sm">
                Fotoğraftan Öğün Ekle
            </a>
        </div>
    </div>

    <div class="card meal-card shadow-sm">
        <div class="card-body">

            @if (!(Model?.Any() ?? false))
            {
                <!-- Boş durum -->
                <div class="empty-meal-state text-center py-5">
                    <div class="empty-icon mb-3">
                        🥗
                    </div>
                    <h5 class="mb-2">Henüz kayıtlı öğünün yok</h5>
                    <p class="text-muted mb-4">
                        Güne başlarken kahvaltını ekleyerek kalori ve makro takibine başlayabilirsin.
                    </p>
                    <a asp-action="Create" class="btn btn-success px-4">
                        İlk öğününü ekle
                    </a>
                </div>
            }
            else
            {
                <!-- Öğün tablosu -->
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th style="width:60px;">#</th>
                                <th>Öğün</th>
                                <th style="width:120px;">Saat</th>
                                <th style="width:150px;">Toplam Kalori</th>
                                <th style="width:140px;" class="text-end">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                var index = 1;
                            }
                            @foreach (var meal in Model)
                            {
                                <tr>
                                    <td>@index</td>
                                    <td>@meal.MealType</td>
                                    <td>@meal.MealDateTime.ToString("HH:mm")</td>
                                    <td>@meal.TotalKcal kcal</td>
                                    <td class="text-end">
                                        <a asp-action="Details"
                                           asp-route-id="@meal.Id"
                                           class="btn btn-outline-primary btn-sm me-1">
                                            Detay
                                        </a>

                                        <form asp-action="Delete"
                                              asp-route-id="@meal.Id"
                                              method="post"
                                              class="d-inline">
                                            <button type="submit"
                                                    class="btn btn-outline-danger btn-sm"
                                                    onclick="return confirm('Bu öğünü silmek istediğine emin misin?');">
                                                Sil
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                                index++;
                            }
                        </tbody>
                    </table>
                </div>
            }

        </div>
    </div>
</div>

<style>
    body {
        background: radial-gradient(circle at top, #e9f9ef 0, #f6fff9 40%, #ffffff 100%);
    }

    .meal-page-container {
        padding-top: 16px;
        padding-bottom: 32px;
    }

    .meal-card {
        border-radius: 18px;
        border: 1px solid #e1efe6;
    }

    .empty-meal-state .empty-icon {
        font-size: 42px;
    }
</style>
