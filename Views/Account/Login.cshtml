@model Nutriplate.Web.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Giriş Yap";
}

<div class="login-wrapper d-flex justify-content-center align-items-center">
    <div class="login-card shadow-lg">

        <!-- Üst kısım: logo / başlık -->
        <div class="text-center mb-4">
            <div class="login-logo d-inline-flex align-items-center justify-content-center mb-3">
                <span class="fw-bold">N</span>
            </div>
            <h3 class="fw-semibold mb-1">
                Tekrar hoş geldin <span class="ms-1">👋</span>
            </h3>
            <p class="text-muted mb-0 small">
                Günlük beslenmeni takip etmek için giriş yap.
            </p>
        </div>

        <!-- Mini bilgi satırı -->
        <div class="login-tags d-flex justify-content-center gap-2 mb-4">
            <span class="badge rounded-pill bg-light text-success border">
                🥗 Dengeli öğünler
            </span>
            <span class="badge rounded-pill bg-light text-success border">
                🔔 Hatırlatmalar
            </span>
            <span class="badge rounded-pill bg-light text-success border d-none d-md-inline">
                📈 İlerleme takibi
            </span>
        </div>

        <form asp-action="Login" method="post" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <!-- E-posta -->
            <div class="mb-3">
                <label asp-for="Email" class="form-label">E-posta</label>
                <input asp-for="Email"
                       class="form-control form-control-lg"
                       placeholder="ornek@mail.com" />
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <!-- Şifre -->
            <div class="mb-4">
                <label asp-for="Password" class="form-label">Şifre</label>
                <input asp-for="Password"
                       type="password"
                       class="form-control form-control-lg"
                       placeholder="••••••••" />
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>

            <!-- Giriş butonu -->
            <button type="submit"
                    class="btn login-btn btn-lg w-100 mb-3">
                Giriş Yap
            </button>

            <!-- Alt metin -->
            <p class="text-center text-muted mb-0">
                Henüz hesabın yok mu?
                <a asp-action="Register"
                   class="link-success text-decoration-none fw-semibold">
                    Kayıt ol
                </a>
            </p>
        </form>
    </div>
</div>

<style>
    /* Bu sayfanın arka planı (register ile aynı) */
    body {
        background: radial-gradient(circle at top, #e9f9ef 0, #f6fff9 40%, #ffffff 100%);
    }

    .login-wrapper {
        min-height: calc(100vh - 70px); /* navbar yüksekliğine göre ayarlayabilirsin */
        padding: 32px 16px;
    }

    .login-card {
        max-width: 480px;
        width: 100%;
        background-color: #ffffff;
        border-radius: 24px;
        padding: 32px 28px 28px;
        border: 1px solid rgba(0, 0, 0, 0.03);
        box-shadow: 0 20px 45px rgba(0, 0, 0, 0.12);
        animation: fadeUp 0.5s ease-out;
    }

    .login-logo {
        width: 64px;
        height: 64px;
        border-radius: 50%;
        background: linear-gradient(135deg, #2ecc71, #27ae60);
        color: #ffffff;
        font-size: 1.8rem;
        box-shadow: 0 10px 22px rgba(46, 204, 113, 0.5);
    }

    .login-tags .badge {
        font-size: 0.75rem;
        padding: 0.4rem 0.75rem;
        background-color: #f4fbf6;
        border-color: #d2f0dd;
    }

    /* Form kontrolleri */
    .form-label {
        font-weight: 500;
        color: #37474f;
    }

    .form-control {
        border-radius: 12px;
        border-color: #e1e7e5;
        padding-top: 0.65rem;
        padding-bottom: 0.65rem;
    }

        .form-control:focus {
            border-color: #27ae60;
            box-shadow: 0 0 0 0.2rem rgba(46, 204, 113, 0.20);
        }

    /* Giriş butonu */
    .login-btn {
        background: linear-gradient(135deg, #2ecc71, #27ae60);
        border: none;
        font-weight: 600;
        letter-spacing: 0.02em;
        color: #fff;
        border-radius: 14px;
        transition: transform 0.12s ease, box-shadow 0.12s ease, background 0.12s ease;
    }

        .login-btn:hover {
            transform: translateY(-1px);
            box-shadow: 0 12px 26px rgba(39, 174, 96, 0.45);
            background: linear-gradient(135deg, #29d66f, #1f9452);
            color: #fff;
        }

    /* Küçük ekran uyumu */
    @@media (max-width: 576px) {
        .login-card {
            padding: 26px 20px 22px;
            border-radius: 20px;
        }

        .login-tags {
            flex-wrap: wrap;
        }
    }

    /* Giriş animasyonu */
    @@keyframes fadeUp {
        from

    {
        opacity: 0;
        transform: translateY(16px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
