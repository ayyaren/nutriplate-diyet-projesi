@model Nutriplate.Web.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Diyetisyen Kaydı";
}

<div class="register-wrapper d-flex justify-content-center align-items-center">
    <div class="register-card shadow-lg">

        <!-- Üst kısım: logo / başlık -->
        <div class="text-center mb-4">
            <div class="register-logo d-inline-flex align-items-center justify-content-center mb-3">
                <span class="fw-bold">N</span>
            </div>
            <h3 class="fw-semibold mb-1">
                NutriPlate’a diyetisyen olarak katıl <span class="ms-1">👨‍⚕️</span>
            </h3>
            <p class="text-muted mb-0 small">
                Danışanlarının öğünlerini, kalori ve makrolarını kolayca takip et.
            </p>
        </div>

        <!-- TempData mesajları -->
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger mb-3">
                @TempData["Error"]
            </div>
        }

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success mb-3">
                @TempData["Success"]
            </div>
        }

        <!-- Mini bilgi satırı -->
        <div class="register-tags d-flex justify-content-center gap-2 mb-4">
            <span class="badge rounded-pill bg-light text-success border">
                🎯 Hedef belirle
            </span>
            <span class="badge rounded-pill bg-light text-success border">
                🥗 Danışan öğün takibi
            </span>
            <span class="badge rounded-pill bg-light text-success border d-none d-md-inline">
                📊 Günlük özet ve raporlar
            </span>
        </div>

        <!-- DİKKAT: DietitianRegister action'ına post ediyor -->
        <form asp-action="DietitianRegister" method="post" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <!-- Ad Soyad -->
            <div class="mb-3">
                <label asp-for="Name" class="form-label">Ad Soyad</label>
                <input asp-for="Name"
                       class="form-control form-control-lg"
                       placeholder="Dyt. Yaren Örnek" />
                <span asp-validation-for="Name" class="text-danger small"></span>
            </div>

            <!-- E-posta -->
            <div class="mb-3">
                <label asp-for="Email" class="form-label">E-posta</label>
                <input asp-for="Email"
                       class="form-control form-control-lg"
                       placeholder="ornek@mail.com" />
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <!-- Şifre -->
            <div class="mb-3">
                <label asp-for="Password" class="form-label">Şifre</label>
                <input asp-for="Password"
                       type="password"
                       class="form-control form-control-lg"
                       placeholder="••••••••" />
                <span asp-validation-for="Password" class="text-danger small"></span>
                <small class="text-muted d-block mt-1">
                    En az 6 karakter, güçlü bir şifre seç.
                </small>
            </div>

            <!-- Şifre (Tekrar) -->
            <div class="mb-4">
                <label asp-for="ConfirmPassword" class="form-label">Şifre (Tekrar)</label>
                <input asp-for="ConfirmPassword"
                       type="password"
                       class="form-control form-control-lg"
                       placeholder="••••••••" />
                <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
            </div>

            <!-- Kayıt butonu -->
            <button type="submit"
                    class="btn register-btn btn-lg w-100 mb-3">
                Diyetisyen Olarak Kayıt Ol
            </button>

            <!-- Alt metin -->
            <p class="text-center text-muted mb-0">
                Zaten bir diyetisyen hesabın var mı?
                <a asp-action="Login"
                   class="link-success text-decoration-none fw-semibold">
                    Giriş yap
                </a>
            </p>
        </form>
    </div>
</div>

<style>
    /* Bu sayfanın arka planı */
    body {
        background: radial-gradient(circle at top, #e9f9ef 0, #f6fff9 40%, #ffffff 100%);
    }

    .register-wrapper {
        min-height: calc(100vh - 70px); /* navbar yüksekliğine göre ayarlayabilirsin */
        padding: 32px 16px;
    }

    .register-card {
        max-width: 520px;
        width: 100%;
        background-color: #ffffff;
        border-radius: 24px;
        padding: 32px 28px 28px;
        border: 1px solid rgba(0, 0, 0, 0.03);
        box-shadow: 0 20px 45px rgba(0, 0, 0, 0.12);
        animation: fadeUp 0.5s ease-out;
    }

    .register-logo {
        width: 64px;
        height: 64px;
        border-radius: 50%;
        background: linear-gradient(135deg, #2ecc71, #27ae60);
        color: #ffffff;
        font-size: 1.8rem;
        box-shadow: 0 10px 22px rgba(46, 204, 113, 0.5);
    }

    .register-tags .badge {
        font-size: 0.75rem;
        padding: 0.4rem 0.75rem;
        background-color: #f4fbf6;
        border-color: #d2f0dd;
    }

    /* Form kontrolleri */
    .form-label {
        font-weight: 500;
        color: #37474f;
    }

    .form-control {
        border-radius: 12px;
        border-color: #e1e7e5;
        padding-top: 0.65rem;
        padding-bottom: 0.65rem;
    }

        .form-control:focus {
            border-color: #27ae60;
            box-shadow: 0 0 0 0.2rem rgba(46, 204, 113, 0.20);
        }

    /* Kayıt butonu */
    .register-btn {
        background: linear-gradient(135deg, #2ecc71, #27ae60);
        border: none;
        font-weight: 600;
        letter-spacing: 0.02em;
        color: #fff;
        border-radius: 14px;
        transition: transform 0.12s ease, box-shadow 0.12s ease, background 0.12s ease;
    }

        .register-btn:hover {
            transform: translateY(-1px);
            box-shadow: 0 12px 26px rgba(39, 174, 96, 0.45);
            background: linear-gradient(135deg, #29d66f, #1f9452);
            color: #fff;
        }

    /* Küçük ekran uyumu */
    @@media (max-width: 576px) {
        .register-card {
            padding: 26px 20px 22px;
            border-radius: 20px;
        }

        .register-tags {
            flex-wrap: wrap;
        }
    }

    /* Giriş animasyonu */
    @@keyframes fadeUp {
        from {
            opacity: 0;
            transform: translateY(16px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
