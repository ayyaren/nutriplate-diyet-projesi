@model IEnumerable<Nutriplate.Web.ViewModels.DietitianClientViewModel>

@{
    ViewData["Title"] = "Diyetisyen Paneli";
}

<div class="container mt-4">
    <h2 class="mb-3">Diyetisyen Paneli</h2>
    <p class="text-muted mb-4">
        Danışanlarının listesini görüntüleyebilir ve her birinin günlük özetini inceleyebilirsin.
    </p>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">
            @ViewBag.Error
        </div>
    }

    <table class="table table-hover align-middle">
        <thead class="table-light">
            <tr>
                <th>#</th>
                <th>Danışan</th>
                <th>E-posta</th>
                <th style="width: 200px;">İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var c in Model)
                {
                    <tr>
                        <td>@c.Id</td>
                        <td>@c.Name</td>
                        <td>@c.Email</td>
                        <td>
                            <a asp-controller="Dietitian"
                               asp-action="ClientSummary"
                               asp-route-id="@c.Id"
                               class="btn btn-outline-success btn-sm">
                                Günlük Özet
                            </a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="4" class="text-center text-muted">
                        Henüz kayıtlı bir danışan görünmüyor.
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
