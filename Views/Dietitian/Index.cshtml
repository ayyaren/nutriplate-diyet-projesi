@model List<Nutriplate.Web.ViewModels.DietitianClientViewModel>

@{
    ViewData["Title"] = "Diyetisyen Paneli";
}

<h2>Diyetisyen Paneli</h2>

<p>Bu sayfaya sadece <strong>Dietitian</strong> rolündeki kullanıcılar erişebilir.</p>

<ul>
    <li>Danışanların günlük özetlerini görüntüleme</li>
    <li>Öğün önerilerini düzenleme</li>
    <li>Yorum ve geri bildirim yazma</li>
</ul>

<hr />

<h4 class="mt-4">Danışan Listesi</h4>

<table class="table table-hover mt-3">
    <thead>
        <tr>
            <th>#</th>
            <th>Danışan</th>
            <th>E-posta</th>
            <th>Güncel Kilo</th>
            <th>Hedef Kilo</th>
            <th>Son Güncelleme</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.Id</td>
                <td>@c.Name</td>
                <td>@c.Email</td>
                <td>@c.CurrentWeight kg</td>
                <td>@c.TargetWeight kg</td>
                <td>@c.LastUpdate.ToString("dd.MM.yyyy")</td>
            </tr>
        }
    </tbody>
</table>
